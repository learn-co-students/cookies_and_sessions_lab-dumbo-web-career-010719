<h1>Add Product to Cart</h1>
<%= form_tag '/products/add', method: :post do %>
  <%= text_field_tag(
      :product,
      params[:product],
      placeholder: "Product",
  ) %>
  <%= submit_tag "add to cart" %>
<% end %>

<h1>Products</h1>
<% cart.each do |product| %>
  <%= product %><br>
<% end %>
